@model Recetas_1.Models.PASO

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>PASO</legend>

    <div class="display-label">IDRECETA</div>
    <div class="display-field">@Model.IDRECETA</div>

    <div class="display-label">NUMEROPASO</div>
    <div class="display-field">@Model.NUMEROPASO</div>

    <div class="display-label">DESCRIPCION</div>
    <div class="display-field">@Model.DESCRIPCION</div>

    <div class="display-label">FOTO</div>
    <div class="display-field">@Model.FOTO</div>

    <div class="display-label">INGREDIENTE</div>
    <div class="display-field">@(Model.INGREDIENTE == null ? "None" : Model.INGREDIENTE.Count.ToString())</div>

    <div class="display-label">RECETA</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.RECETA).ToString()</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.IDPASO }) |
    @Html.ActionLink("Back to List", "Index")
</p>


